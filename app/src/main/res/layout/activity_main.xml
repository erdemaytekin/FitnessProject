<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity"
        android:background="#FFFFFF">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"
            android:text="Kalori hesaplama ekranına hoşgeldiniz"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="10dp"
            android:text="Lütfen bir öğün seçiniz:"
            android:textSize="20sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp">

            <CheckBox
                android:id="@+id/kahvalti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kahvaltı"
                android:textSize="18sp"/>
            <CheckBox
                android:id="@+id/ogle_yemegi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Öğle Yemeği"
                android:textSize="18sp"
                android:layout_marginLeft="10dp"/>
            <CheckBox
                android:id="@+id/aksam_yemegi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Akşam Yemeği"
                android:textSize="18sp"
                android:layout_marginLeft="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="560dp"
            android:orientation="vertical"
            android:background="#9C9C9C">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Eklemek istediğiniz besinler:"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="10dp"
                android:textSize="20sp"
                android:textColor="@color/black"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:text="Dilim ekmek sayısı (1 dilim = 69 kcal)"
                    android:textSize="18sp"
                    android:layout_marginHorizontal="10dp"
                    android:textColor="@color/black"/>

                <EditText
                    android:id="@+id/dilim_ekmek"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:text="0"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:background="#BABABA"/>

            </LinearLayout>

            <CheckBox
                android:id="@+id/erik"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="Erik (85 kcal / adet)"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginHorizontal="10dp"/>
            <CheckBox
                android:id="@+id/elma"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="Elma (58 kcal / adet)"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginHorizontal="10dp"/>
            <CheckBox
                android:id="@+id/Mandalina"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="Mandalina (49 kcal / adet)"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginHorizontal="10dp"/>
            <CheckBox
                android:id="@+id/dana"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="Dana eti (223 kcal / 100 gr)"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginHorizontal="10dp"/>
            <CheckBox
                android:id="@+id/tavuk"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="Tavuk eti (215 kcal / 100 gr)"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginHorizontal="10dp"/>
            <CheckBox
                android:id="@+id/peynir"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text=" peynir (404 kcal / 100 gr)"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginHorizontal="10dp"/>
            <CheckBox
                android:id="@+id/salam"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="Beyaz peynir (212kcal / 100 gr)"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginHorizontal="10dp"/>
            <CheckBox
                android:id="@+id/ceviz"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="Ceviz (651 kcal / 100 gr)"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginHorizontal="10dp"/>
            <CheckBox
                android:id="@+id/findik"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="Fındık (634 kcal / 100 gr)"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginHorizontal="10dp"/>
            <CheckBox
                android:id="@+id/makarna"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="Makarna (431 kcal / 1 dilim)"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginHorizontal="10dp"/>
            <CheckBox
                android:id="@+id/cikolata"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="Sütlü Çikolata (106 kcal / 20 gr)"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginHorizontal="10dp"/>
            <CheckBox
                android:id="@+id/sprite"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="Sprite (118 kcal / 200 ml)"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginHorizontal="10dp"/>
            <CheckBox
                android:id="@+id/soguk_cay"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="Soğuk Çay (60 kcal / 200 ml)"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginHorizontal="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/ekle_button"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:text="Ekle"
                android:backgroundTint="@color/orange"
                android:textColor="@color/black"
                android:textSize="20sp"/>

            <Button
                android:id="@+id/yenile_button"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="20dp"
                android:text="Yenile"
                android:backgroundTint="@color/orange"
                android:textColor="@color/black"
                android:textSize="20sp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/deneme"
            android:layout_marginHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/black"/>

    </LinearLayout>
</ScrollView>
